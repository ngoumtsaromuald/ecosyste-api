# Auth System Production Configuration
# This file contains production-specific auth environment variables

# JWT Configuration - Production Security
JWT_SECRET=${JWT_SECRET}
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}
JWT_REFRESH_EXPIRES=7d

# Password Security - Production Settings
BCRYPT_ROUNDS=12
PASSWORD_RESET_EXPIRES=1h
EMAIL_VERIFICATION_EXPIRES=24h
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=15m

# Session Management - Production Redis
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=${REDIS_PORT}
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0
SESSION_TTL=86400
REFRESH_TOKEN_TTL=604800

# Email Configuration - Production SMTP with SSL/TLS
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=${SMTP_PORT}
SMTP_SECURE=true
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}
EMAIL_FROM=${EMAIL_FROM}
SMTP_TLS_REJECT_UNAUTHORIZED=true
SMTP_TLS_MIN_VERSION=TLSv1.2

# OAuth2 Configuration - Production Providers
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
GITHUB_CLIENT_ID=${GITHUB_CLIENT_ID}
GITHUB_CLIENT_SECRET=${GITHUB_CLIENT_SECRET}
LINKEDIN_CLIENT_ID=${LINKEDIN_CLIENT_ID}
LINKEDIN_CLIENT_SECRET=${LINKEDIN_CLIENT_SECRET}

# OAuth2 Callback URLs - Production
FRONTEND_URL=${FRONTEND_URL}
OAUTH_CALLBACK_URL=${OAUTH_CALLBACK_URL}
OAUTH_SUCCESS_REDIRECT=${OAUTH_SUCCESS_REDIRECT}
OAUTH_ERROR_REDIRECT=${OAUTH_ERROR_REDIRECT}

# Rate Limiting - Production Settings
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=1000
API_KEY_RATE_LIMIT_DEFAULT=10000
USER_RATE_LIMIT_DEFAULT=1000
IP_RATE_LIMIT_DEFAULT=100

# Security Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_LOG_RETENTION_DAYS=90
SECURITY_LOG_FILE=/app/logs/security.log
FAILED_LOGIN_ALERT_THRESHOLD=10

# API Key Configuration
API_KEY_PREFIX=rk_prod_
API_KEY_DEFAULT_EXPIRY_DAYS=365
API_KEY_MAX_PER_USER=10

# Production Security Headers
HELMET_ENABLED=true
TRUST_PROXY=true
SECURE_COOKIES=true
SAME_SITE_COOKIES=strict

# Monitoring and Alerts
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
PROMETHEUS_METRICS_ENABLED=true