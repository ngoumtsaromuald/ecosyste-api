# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database - Use environment variables or secrets management
DATABASE_URL=${DATABASE_URL}
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT}
DB_USERNAME=${DB_USERNAME}
DB_PASSWORD=${DB_PASSWORD}
DB_NAME=${DB_NAME}

# Redis - Use environment variables or secrets management
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=${REDIS_PORT}
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0

# JWT - MUST be changed in production
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h

# API Configuration
API_PREFIX=api/v1
CORS_ORIGINS=${CORS_ORIGINS}

# Rate Limiting - More restrictive in production
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=1000

# Cache TTL (in seconds) - Longer TTL for production
CACHE_API_RESOURCE_TTL=7200
CACHE_CATEGORIES_TTL=172800
CACHE_SEARCH_TTL=3600
CACHE_USER_TTL=3600

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
HELMET_ENABLED=true
TRUST_PROXY=true

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Performance
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000

# SSL/TLS
SSL_ENABLED=true