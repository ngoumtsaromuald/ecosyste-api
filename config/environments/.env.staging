# Staging Environment Configuration
NODE_ENV=staging
PORT=3000

# Database
DATABASE_URL=${DATABASE_URL}
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT}
DB_USERNAME=${DB_USERNAME}
DB_PASSWORD=${DB_PASSWORD}
DB_NAME=${DB_NAME}_staging

# Redis
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=${REDIS_PORT}
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=1

# JWT
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h

# API Configuration
API_PREFIX=api/v1
CORS_ORIGINS=${CORS_ORIGINS}

# Rate Limiting - Moderate limits for staging
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=500

# Cache TTL (in seconds)
CACHE_API_RESOURCE_TTL=3600
CACHE_CATEGORIES_TTL=86400
CACHE_SEARCH_TTL=1800
CACHE_USER_TTL=1800

# Logging - More verbose for staging
LOG_LEVEL=debug
LOG_FORMAT=json

# Security
HELMET_ENABLED=true
TRUST_PROXY=true

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Performance
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000

# SSL/TLS
SSL_ENABLED=false