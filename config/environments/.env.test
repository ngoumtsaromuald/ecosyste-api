# Test Environment Configuration
NODE_ENV=test
PORT=3001

# Database - Use test database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/romapi_core_test?schema=public
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=romapi_core_test

# Redis - Use separate DB for tests
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=15

# JWT - Test secret
JWT_SECRET=test-jwt-secret-key
JWT_EXPIRES_IN=1h

# API Configuration
API_PREFIX=api/v1
CORS_ORIGINS=http://localhost:3001

# Rate Limiting - Relaxed for tests
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=10000

# Cache TTL (in seconds) - Short TTL for tests
CACHE_API_RESOURCE_TTL=60
CACHE_CATEGORIES_TTL=300
CACHE_SEARCH_TTL=60
CACHE_USER_TTL=60

# Logging - Minimal for tests
LOG_LEVEL=error
LOG_FORMAT=simple

# Security - Disabled for tests
HELMET_ENABLED=false
TRUST_PROXY=false

# Monitoring
METRICS_ENABLED=false
HEALTH_CHECK_ENABLED=true

# Performance
MAX_REQUEST_SIZE=1mb
REQUEST_TIMEOUT=5000

# SSL/TLS
SSL_ENABLED=false