{
  "dashboard": {
    "id": null,
    "title": "ROMAPI Search System Monitoring",
    "tags": ["search", "elasticsearch", "performance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Search Request Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(search_requests_total[5m])",
            "legendFormat": "Requests/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Search Response Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(search_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(search_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Search Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(search_errors_total[5m]) / rate(search_requests_total[5m]) * 100",
            "legendFormat": "Error Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 4,
        "title": "Cache Hit Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(search_cache_hits_total[5m]) / (rate(search_cache_hits_total[5m]) + rate(search_cache_misses_total[5m])) * 100",
            "legendFormat": "Cache Hit Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 5,
        "title": "Top Search Terms",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (query) (increase(search_requests_total[1h])))",
            "format": "table",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "list"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 6,
        "title": "Elasticsearch Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "elasticsearch_indices_search_query_time_in_millis",
            "legendFormat": "Query Time (ms)"
          },
          {
            "expr": "elasticsearch_indices_search_fetch_time_in_millis",
            "legendFormat": "Fetch Time (ms)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 7,
        "title": "Search Operations by Type",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (operation) (increase(search_requests_total[1h]))",
            "legendFormat": "{{operation}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 8,
        "title": "Search Results Distribution",
        "type": "histogram",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(search_results_count_bucket[5m])) by (le))",
            "legendFormat": "Results Count Distribution"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24}
      },
      {
        "id": 9,
        "title": "Geographic Search Distribution",
        "type": "geomap",
        "targets": [
          {
            "expr": "sum by (region) (increase(search_requests_total{has_geo_filter=\"true\"}[1h]))",
            "legendFormat": "{{region}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "continuous-GrYlRd"
            }
          }
        },
        "gridPos": {"h": 12, "w": 12, "x": 0, "y": 32}
      },
      {
        "id": 10,
        "title": "Search Personalization Metrics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(search_requests_total{personalized=\"true\"}[5m])",
            "legendFormat": "Personalized Searches"
          },
          {
            "expr": "rate(search_requests_total{personalized=\"false\"}[5m])",
            "legendFormat": "Non-personalized Searches"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {"h": 12, "w": 12, "x": 12, "y": 32}
      },
      {
        "id": 11,
        "title": "Language Detection Accuracy",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(search_language_detection_confidence)",
            "legendFormat": "Avg Confidence"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 0.6},
                {"color": "green", "value": 0.8}
              ]
            }
          }
        },
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 44}
      },
      {
        "id": 12,
        "title": "Debug Mode Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(search_debug_requests_total[5m])",
            "legendFormat": "Debug Requests/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {"h": 6, "w": 18, "x": 6, "y": 44}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 30,
    "version": 1
  }
}