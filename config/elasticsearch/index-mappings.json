{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "max_result_window": 50000,
    "refresh_interval": "1s",
    "analysis": {
      "analyzer": {
        "french_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "asciifolding",
            "french_elision",
            "french_stemmer",
            "french_stop"
          ]
        },
        "french_search_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "asciifolding",
            "french_elision",
            "french_stemmer",
            "french_stop",
            "french_synonym"
          ]
        },
        "autocomplete_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "asciifolding",
            "autocomplete_filter"
          ]
        },
        "autocomplete_search_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        },
        "suggest_analyzer": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        },
        "english_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "asciifolding",
            "english_possessive_stemmer",
            "english_stemmer",
            "english_stop"
          ]
        },
        "english_search_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "asciifolding",
            "english_possessive_stemmer",
            "english_stemmer",
            "english_stop",
            "english_synonym"
          ]
        },
        "multilingual_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "asciifolding",
            "multilingual_stemmer"
          ]
        }
      },
      "filter": {
        "french_elision": {
          "type": "elision",
          "articles_case": true,
          "articles": [
            "l", "m", "t", "qu", "n", "s", "j", "d", "c", "jusqu", "quoiqu", "lorsqu", "puisqu"
          ]
        },
        "french_stemmer": {
          "type": "stemmer",
          "language": "light_french"
        },
        "french_stop": {
          "type": "stop",
          "stopwords": "_french_"
        },
        "french_synonym": {
          "type": "synonym",
          "synonyms": [
            "api,interface,service,webservice",
            "entreprise,société,compagnie,business",
            "restaurant,resto,brasserie,café",
            "hôtel,hotel,hébergement,logement",
            "transport,déplacement,voyage,mobilité",
            "boutique,magasin,commerce,shop",
            "santé,médical,clinique,hopital",
            "éducation,formation,école,université",
            "finance,banque,assurance,crédit",
            "technologie,tech,informatique,digital"
          ]
        },
        "autocomplete_filter": {
          "type": "edge_ngram",
          "min_gram": 2,
          "max_gram": 20
        },
        "english_possessive_stemmer": {
          "type": "stemmer",
          "language": "possessive_english"
        },
        "english_stemmer": {
          "type": "stemmer",
          "language": "light_english"
        },
        "english_stop": {
          "type": "stop",
          "stopwords": "_english_"
        },
        "english_synonym": {
          "type": "synonym",
          "synonyms": [
            "api,interface,service,webservice",
            "company,business,enterprise,corporation",
            "restaurant,resto,eatery,diner",
            "hotel,accommodation,lodging,inn",
            "transport,transportation,travel,mobility",
            "shop,store,boutique,retail",
            "health,medical,clinic,hospital",
            "education,training,school,university",
            "finance,banking,insurance,credit",
            "technology,tech,it,digital"
          ]
        },
        "multilingual_stemmer": {
          "type": "stemmer_override",
          "rules": [
            "api => api",
            "apis => api",
            "service => service",
            "services => service",
            "restaurant => restaurant",
            "restaurants => restaurant",
            "hotel => hotel",
            "hotels => hotel"
          ]
        }
      },
      "normalizer": {
        "lowercase_normalizer": {
          "type": "custom",
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "keyword"
      },
      "name": {
        "type": "text",
        "analyzer": "multilingual_analyzer",
        "boost": 3.0,
        "fields": {
          "keyword": {
            "type": "keyword"
          },
          "french": {
            "type": "text",
            "analyzer": "french_analyzer",
            "search_analyzer": "french_search_analyzer"
          },
          "english": {
            "type": "text",
            "analyzer": "english_analyzer",
            "search_analyzer": "english_search_analyzer"
          },
          "suggest": {
            "type": "completion",
            "analyzer": "suggest_analyzer",
            "preserve_separators": true,
            "preserve_position_increments": true,
            "max_input_length": 50,
            "contexts": [
              {
                "name": "category",
                "type": "category"
              },
              {
                "name": "resource_type",
                "type": "category"
              },
              {
                "name": "language",
                "type": "category"
              }
            ]
          },
          "autocomplete": {
            "type": "text",
            "analyzer": "autocomplete_analyzer",
            "search_analyzer": "autocomplete_search_analyzer"
          },
          "exact": {
            "type": "keyword",
            "normalizer": "lowercase_normalizer"
          }
        }
      },
      "description": {
        "type": "text",
        "analyzer": "multilingual_analyzer",
        "boost": 2.0,
        "fields": {
          "french": {
            "type": "text",
            "analyzer": "french_analyzer",
            "search_analyzer": "french_search_analyzer"
          },
          "english": {
            "type": "text",
            "analyzer": "english_analyzer",
            "search_analyzer": "english_search_analyzer"
          }
        }
      },
      "category": {
        "type": "object",
        "properties": {
          "id": {
            "type": "keyword"
          },
          "name": {
            "type": "text",
            "analyzer": "multilingual_analyzer",
            "boost": 2.5,
            "fields": {
              "keyword": {
                "type": "keyword"
              },
              "french": {
                "type": "text",
                "analyzer": "french_analyzer"
              },
              "english": {
                "type": "text",
                "analyzer": "english_analyzer"
              }
            }
          },
          "slug": {
            "type": "keyword"
          },
          "hierarchy": {
            "type": "keyword"
          },
          "path": {
            "type": "text",
            "analyzer": "keyword"
          }
        }
      },
      "resourceType": {
        "type": "keyword"
      },
      "plan": {
        "type": "keyword"
      },
      "verified": {
        "type": "boolean"
      },
      "location": {
        "type": "geo_point"
      },
      "address": {
        "type": "object",
        "properties": {
          "street": {
            "type": "text",
            "analyzer": "french_analyzer"
          },
          "city": {
            "type": "keyword"
          },
          "region": {
            "type": "keyword"
          },
          "country": {
            "type": "keyword"
          },
          "postalCode": {
            "type": "keyword"
          }
        }
      },
      "contact": {
        "type": "object",
        "properties": {
          "phone": {
            "type": "keyword"
          },
          "email": {
            "type": "keyword"
          },
          "website": {
            "type": "keyword"
          }
        }
      },
      "tags": {
        "type": "text",
        "analyzer": "multilingual_analyzer",
        "boost": 1.5,
        "fields": {
          "keyword": {
            "type": "keyword"
          },
          "french": {
            "type": "text",
            "analyzer": "french_analyzer"
          },
          "english": {
            "type": "text",
            "analyzer": "english_analyzer"
          }
        }
      },
      "pricing": {
        "type": "object",
        "properties": {
          "minPrice": {
            "type": "float"
          },
          "maxPrice": {
            "type": "float"
          },
          "currency": {
            "type": "keyword"
          }
        }
      },
      "createdAt": {
        "type": "date"
      },
      "updatedAt": {
        "type": "date"
      },
      "popularity": {
        "type": "float"
      },
      "rating": {
        "type": "float"
      },
      "reviewCount": {
        "type": "integer"
      },
      "language": {
        "type": "keyword"
      }
    }
  }
}