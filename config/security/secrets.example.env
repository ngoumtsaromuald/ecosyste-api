# Production Secrets Template
# Copy this file to secrets.env and fill in the actual values
# NEVER commit secrets.env to version control

# Database Credentials
DATABASE_URL=postgresql://username:password@host:port/database?schema=public
DB_HOST=your-db-host
DB_PORT=5432
DB_USERNAME=your-db-username
DB_PASSWORD=your-secure-db-password
DB_NAME=romapi_core

# Redis Credentials
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password

# JWT Secret (Generate with: openssl rand -base64 64)
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long

# Admin User Password
ADMIN_PASSWORD=your-secure-admin-password

# CORS Origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# SSL Certificate paths (if using SSL)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# External API Keys (if needed)
GEOCODING_API_KEY=your-geocoding-api-key
ANALYTICS_API_KEY=your-analytics-api-key

# Monitoring and Alerting
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_PUSHGATEWAY_URL=your-prometheus-pushgateway-url

# Email Configuration (for notifications)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@yourdomain.com