# Application
NODE_ENV=development
PORT=3000

# Database (Development)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/romapi_core?schema=public"
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=romapi_core

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=romapi_dev
ELASTICSEARCH_MAX_RETRIES=3
ELASTICSEARCH_REQUEST_TIMEOUT=30000

# Search Configuration
SEARCH_CACHE_TTL=300
SEARCH_SUGGESTIONS_CACHE_TTL=3600
SEARCH_FACETS_CACHE_TTL=86400
SEARCH_MAX_RESULTS=1000
SEARCH_DEFAULT_SIZE=20

# Queue Configuration (Bull/BullMQ)
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_DB=1
INDEXING_QUEUE_CONCURRENCY=5
INDEXING_QUEUE_ATTEMPTS=3
INDEXING_QUEUE_BACKOFF_DELAY=5000

# JWT
JWT_SECRET=dev-secret-key-change-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=dev-refresh-secret-key-change-in-production
REFRESH_TOKEN_EXPIRES_IN=7d

# API Configuration
API_PREFIX=api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# Cache TTL (in seconds)
CACHE_API_RESOURCE_TTL=3600
CACHE_CATEGORIES_TTL=86400
CACHE_SEARCH_TTL=1800
CACHE_USER_TTL=1800

# Auth Configuration
PASSWORD_RESET_TOKEN_EXPIRES_IN=1h
EMAIL_VERIFICATION_TOKEN_EXPIRES_IN=24h

# Email Configuration (Development - using console transport)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=dev@romapi.com
SMTP_PASSWORD=dev-password
SMTP_FROM=noreply@romapi.com

# OAuth2 Configuration (Development)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Frontend URL
FRONTEND_URL=http://localhost:3001

# Session Configuration
SESSION_SECRET=dev-session-secret-change-in-production